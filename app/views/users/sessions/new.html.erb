<div id="login">
  <h1 id="login-h1">
    <img id="logo" src="<%= image_path("logo.svg") %>" onerror="this.src='<%= image_path("logo.png") %>'" alt="Alef" />
  </h1>

  <%= form_for(resource, as: resource_name, url: user_session_path, html: { class: "login-form" }) do |f| %>
      <fieldset id="login-fieldset">
        <label>Prihláste sa AIS údajmi.</label>

        <%= f.label :login, "Prihlasovacie meno" %>
        <%= f.text_field :login, autofocus: true, class: "login-text" %>

        <%= f.label :password, "Heslo" %>
        <%= f.password_field :password, autocomplete: "off", class: "login-text" %>

        <% if devise_mapping.rememberable? -%>
            <%#= f.check_box :remember_me %>
            <%#= f.label :remember_me, "Zapamätať prihlásenie" %>

            <%= f.label :remember_me, class: "login-remember-me" do %>
                <%= f.check_box :remember_me, class: "login-remember-me-check" %> &nbsp; Zapamätať prihlásenie
            <% end %>
        <% end -%>

        <%= f.submit "Prihlásiť", id: "login-submit" %>
      </fieldset>
  <% end %>
</div>

