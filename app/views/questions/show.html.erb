<div id="faux-background" class="mobile-content"></div>
  <%= render 'nav' %>
<hr class="nav-offset">
<div class="mobile-content main">
  <%= render 'question_info' %>
<div class="question-text">
    <%= @question.question_text %>
</div>
  <form method="post" action="<%= request.original_url %>/evaluate_answers" data-remote>
      <input type="hidden" name="type" value="<%= @question.type %>">
      <div class="question-options">
        <% case @question.type
           when 'SingleChoiceQuestion' %>
            <%= render 'single_choice_options' %>
        <% when 'MultiChoiceQuestion' %>
            <%= render 'multi_choice_options' %>
        <% when 'EvaluatorQuestion' %>
            <%= render 'evaluator_slider' %>
        <% end %>
      </div>
    <div class="question-button-container">
    <div class="question-button-wrapper">
        <button name="commit" value="send_answer" class="question-button question-button-proceed">odpovedaj</button>
        <button name="commit" value="dont_know" class="question-button">neviem</button>
        <button name="commit" value="show_solution" class="question-button">zobraziť odpoveď</button>
    </div>
    </div>
  </form>
</div>


