<div id="faux-background" class="mobile-content"></div>
<nav>
  <div class="mobile-content">
    <h2 style="padding: 0 1rem; display: block;"><%= @question.lo_id %></h2>
    <i class="icon-left"></i>
    <i class="nav-right-icons icon-right"></i>
    <i class="nav-right-icons icon-list"></i>
  </div>
</nav>
<hr class="nav-offset">
<div class="mobile-content main">
  <div class="question-info">
    <i class="icon-seen"></i> Videné (3x)
    <i class="icon-done"></i> Vyriešené
    <i class="icon-new"></i> Nové
  </div>
<div class="question-text">
    <%= @question.question_text %>
</div>
  <form>
      <div class="question-options">
        <% case @question.type
           when 'SingleChoiceQuestion' %>
            <%= render 'single_choice_options' %>
        <% when 'MultiChoiceQuestion' %>
            <%= render 'multi_choice_options' %>
        <% when 'EvaluatorQuestion' %>
            <%= render 'evaluator_slider' %>
        <% end %>
      </div>
    <div class="question-button-container">
    <div class="question-button-wrapper">
        <button class="question-button question-button-proceed">odpovedaj</button>
        <button class="question-button">neviem</button>
        <button class="question-button">zobraziť odpoveď</button>
    </div>
    </div>
  </form>
</div>


