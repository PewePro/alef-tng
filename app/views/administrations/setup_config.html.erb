<div class="admin">
  <%= @setup.name %><br>
  <%= form_for @setup, url: url_for(setup_attributes_path), html: {method: 'post'} do |s| %>
    <%= s.text_field :week_count %>
    <%= date_select :setup, :first_week_at %>
    <%= s.submit "Odoslať" %>
  <% end %>

  <%= form_tag url_for(setup_relations_path), html: {method: 'post'} do %>
  <table>
    <tr>
      <th>Názov konceptu</th>
      <% @weeks.each do |w| %>
          <th>
            <%= w.number %>
          </th>
      <% end %>
    </tr>
    <% @concepts.each do |c| %>
      <tr>
      <td>
        <%= c.name %>
      </td>
      <% @weeks.each do |w| %>
          <td>
            <%= check_box_tag "relations[#{c.id}][#{w.id}]", "1", (w.id.in? c.weeks.map(&:id)) %>
          </td>
      <% end %>
      </tr>
    <% end %>
    <tr>
      <th>Počet otázok</th>
      <% @weeks.each do |w| %>
          <td>
            <%= w.question_count %>
          </td>
      <% end %>
    </tr>
  </table>
  <%= submit_tag "Odoslať" %>
  <% end %>
</div>

