<div id="faux-background" class="mobile-content"></div>
<%= render 'nav' %>
<hr class="nav-offset not-zoomable">

<%= render 'week_info'%>



<div class="mobile-content main">
  <% @rooms.each do |r|

  %>
      <% if r.state == "do_not_use" %>
              <a href="<%=
                  url_for controller: 'rooms', action: 'show', room_number: r.id, week_number: @week.number
              %>" class="card_open ">
                <h3 class="card-header"><%= r.name %><%= ' (neúspešný)' if r.state == "do_not_use" %></h3>
                <%= r.decsription %>
                <% if r.question_count > 0 %>
                    <div class="room-progressbar" data-number-all="<%= r.question_count %>" data-number-done="<%= r.question_count_done current_user.id %>">
                      <div class="progressbar-caption"></div>
                    </div>
                <% else %>
                    Žiadne otázky
                <% end %>
              </a>
      <% else %>
            <a href="<%=
                url_for controller: 'rooms', action: 'show', room_number: r.id, week_number: @week.number
            %>" class="card ">
              <h3 class="card-header"><%= r.name %><%= ' (neúspešný)' if r.state == "do_not_use" %></h3>
              <%= r.decsription %>
              <% if r.question_count > 0 %>
                  <div class="room-progressbar" data-number-all="<%= r.question_count %>" data-number-done="<%= r.question_count_done current_user.id %>">
                    <div class="progressbar-caption"></div>
                  </div>
              <% else %>
                  Žiadne otázky
              <% end %>
            </a>
      <% end %>
      <% end
    %>
</div>

